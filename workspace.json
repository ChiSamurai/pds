{
  "version": 1,
  "projects": {
    "pds-css": {
      "root": "packages/pds-css",
      "sourceRoot": "packages/pds-css/src",
      "projectType": "library",
      "schematics": {},
      "architect": {
        "lint": {
          "builder": "@nrwl/linter:eslint",
          "options": {
            "lintFilePatterns": [
              "packages/pds-css/**/*.ts",
              "packages/pds-css/src/**/*.html",
              "packages/pds-css/src/**/*.html",
              "packages/pds-css/src/**/*.html"
            ]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "options": {
            "jestConfig": "packages/pds-css/jest.config.js",
            "passWithNoTests": true
          },
          "outputs": ["coverage/packages/pds-css"]
        },
        "build": {
          "builder": "@vitagroup-devkit/style:package",
          "options": {
            "outDir": "dist/packages/pds-css",
            "rootDir": "packages/pds-css",
            "prebuild": {
              "files": ["src/prebuilt/*.scss"],
              "outDir": "dist/packages/pds-css/prebuilt"
            },
            "postcssConfig": "packages/pds-css/postcss.config.js",
            "copy": [
              "packages/pds-css/assets",
              {
                "from": "packages/pds-css/src",
                "to": "sass"
              },
              {
                "from": "packages/pds-css",
                "pattern": "*.md"
              }
            ]
          }
        }
      }
    },
    "common": {
      "projectType": "library",
      "root": "packages/common",
      "sourceRoot": "packages/common/src",
      "prefix": "vitagroup",
      "architect": {
        "build": {
          "builder": "@nrwl/angular:package",
          "options": {
            "tsConfig": "packages/common/tsconfig.lib.json",
            "project": "packages/common/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "packages/common/tsconfig.lib.prod.json"
            }
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "packages/common/tsconfig.lib.json",
              "packages/common/tsconfig.spec.json"
            ],
            "exclude": ["**/node_modules/**", "!packages/common/**/*"]
          }
        },
        "test": {
          "builder": "@nrwl/jest:jest",
          "outputs": ["coverage/packages/common"],
          "options": {
            "jestConfig": "packages/common/jest.config.js",
            "passWithNoTests": true
          }
        }
      }
    }
  },
  "cli": {
    "defaultCollection": "@nrwl/angular"
  },
  "schematics": {
    "@nrwl/angular:application": {
      "unitTestRunner": "jest"
    },
    "@nrwl/angular:library": {
      "unitTestRunner": "jest"
    }
  }
}
